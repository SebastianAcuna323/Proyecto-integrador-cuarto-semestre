                        <JFXButton fx:id="buttonLogin" layoutX="327.0" layoutY="340.0" onAction="#iniciarSesion" prefHeight="48.0" prefWidth="143.0" style="-fx-background-color: #262626; -fx-background-radius: 30;" text="Login" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </JFXButton>
                        <JFXButton fx:id="buttonRegister" layoutX="152.0" layoutY="340.0" onAction="#cambiarAregistro" prefHeight="48.0" prefWidth="143.0" style="-fx-background-color: #262626; -fx-background-radius: 30;" text="Register" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </JFXButton>
                     </children>
                  </AnchorPane>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <padding>
                  <Insets left="15.0" right="45.0" />
               </padding>
            </HBox>
         </children>
      </HBox>
   </center>
</BorderPane>
