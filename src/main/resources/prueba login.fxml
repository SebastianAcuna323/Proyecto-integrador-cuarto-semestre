<BorderPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(#0d4d80 0%, #0a3059 50%, #000000 100%);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PruebaLoginController">
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" maxHeight="600.0" maxWidth="300.0" minHeight="650.0" minWidth="1250.0" prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: linear-gradient(#000000 0%, #0a3059 50%, #0d4d80 100%); -fx-background-radius: 20;">
               <children>
                  <ImageView fx:id="imgLogoGoogle" fitHeight="561.0" fitWidth="655.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/Dise-o-sin-t-tulo-1--unscreen.gif" />
                     </image>
                  </ImageView>
                  <AnchorPane fx:id="panelLogin" maxHeight="550.0" prefHeight="600.0" prefWidth="594.0" style="-fx-background-color: white; -fx-background-radius: 10;">
                     <children>
                        <Label fx:id="lblWelcome" layoutX="206.0" layoutY="53.0" prefHeight="58.0" prefWidth="255.0" text="Welcome" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="50.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblAccessAcount" layoutX="129.0" layoutY="112.0" prefHeight="58.0" prefWidth="413.0" text="Access your account" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="38.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtUsername" layoutX="140.0" layoutY="231.0" prefHeight="32.0" prefWidth="334.0" promptText="Username" style="-fx-background-color: transparent; -fx-border-color: transparent transparent black transparent; -fx-border-width: 0 0 2 0; -fx-padding: 5 0 5 0; -fx-font-size: 14;" />
